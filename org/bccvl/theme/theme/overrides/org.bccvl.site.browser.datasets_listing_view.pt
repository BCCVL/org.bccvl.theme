<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:content-core fill-slot="body"
	            tal:define="folderContents view/datasets">

    <ul class="contentTabs">
        <li class="contentTab firstContentTab">
            <a id="datasets-listing"
               href="#" class="selected"
               tal:attributes="href string:${context/absolute_url}"><span>My Datasets</span></a>
        </li>
        <li class="contentTab">
            <a id="datasets-import"
               href="#"
               tal:attributes="href string:${context/absolute_url}/datasets_import_view"><span>Import Dataset</span></a>
        </li>
        <li class="contentTab lastContentTab">
            <a id="datasets-upload"
               href="#"
               tal:attributes="href string:${context/absolute_url}/datasets_upload_view"><span>Upload Dataset</span></a>
        </li>
    </ul>

    <metal:content-core  use-macro="context/folder_listing/content-core">
        <metal:entries fill-slot="entries">
            <div metal:use-macro="context/batch_macros/macros/navigation" />
            <table class="table table-hover bccvl-datasetstable"
                   summary="Content listing"
                   i18n:attributes="summary summary_content_listing;">
                <thead>
                    <tr class="headers">
                      <th class="header headerSortUp">Date<span /></th>
                      <th>Summary<span /></th>
                      <th />
                    </tr>
                </thead>

                <tbody>
                    <metal:block use-macro="context/folder_listing/macros/entries">
                        <metal:entry fill-slot="entry">
                    <tr tal:define="oddrow repeat/item/odd;"
                        tal:attributes="class python: oddrow and 'even' or 'odd'">
                        <!-- Modified -->
                        <td tal:condition="show_about"
                            tal:content="python:toLocalizedTime(item_modified,long_format=1)">
                          August 16, 2001 at 23:35:59
                        </td>
                        <!-- Title -->
                        <td class="bccvl-table-label">
                          <h1 tal:content="item_title_or_id">Dataset title</h1>
                          <p tal:content="item_description">Dataset short description</p>
                        </td>
                        <!-- Actions -->
                        <td class="bccvl-table-controls">
                          <!-- <a tal:define="shared python:item_wf_state == 'published';
                                         icon_class python: shared and 'icon-share' or 'icon-unshare';
                                         icon_title python: shared and 'share' or 'unshare';"
                             tal:attributes="href string:${item_url}/dm/${icon_title}">
                             <i class="icon-share" title="share"
                                tal:attributes="class icon_class;
                                                title icon_title"></i>
                          </a> -->
                          <a href="#" tal:attributes="href string:${item_url}/@@download/file/${file/filename}"
                             tal:condition="file"
                             tal:define="item_obj item/getObject;
                                         file item_obj/file">
                            <i class="icon-circle-arrow-down" title="download"></i>
                          </a>
                          <a href="#" class="bccvl-occurrence-viz" tal:attributes="data-viz-id string:${item_url}/@@download/file/${file/filename}"
                             tal:condition="file"
                             tal:define="item_obj item/getObject;
                                         file item_obj/file">
                            <i class="icon-eye-open icon-link" title="preview"></i>
                          </a>
                          <!-- <a  tal:attributes="href string:${item_url}/edit">
                            <i class="icon-pencil" title="edit"></i>
                          </a> -->
                        </td>

                    </tr>

                        </metal:entry>
                    </metal:block>
                </tbody>
            </table>

            </metal:entries>
    </metal:content-core>
</metal:content-core>

</body>
</html>
