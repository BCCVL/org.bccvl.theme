<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- DATASET LIST ============================================ -->
    <rules if-path="datasets/" >

      <theme href="html/dataset-list.html" />

      <!-- Datasets sub navigation -->
      <replace css:theme="#datasets_tabs" css:content="#datasets-nav"/>

      <!-- Search filter -->
      <replace css:theme="#datasets-filter" css:content="#left-area"/>

      <!-- Dataset Table -->
      <replace css:theme-children="#datasets-listing" css:content-children="#center-area" />

    </rules>
</rules>
