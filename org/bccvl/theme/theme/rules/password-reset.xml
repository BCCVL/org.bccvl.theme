<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- PASSWORD RESET PAGE ============================================ -->
    <rules if-path="mail_password_form
                    mail_password
                    passwordreset
                    pwreset_expired
                    pwreset_finish
                    pwreset_form
                    pwreset_invalid">
        <theme href="html/password-reset.html" />
        
        <rules if-not="$is_debug">
          <!-- load page js without require -->
          <replace css:theme="#page_js">
            <script type="text/javascript" src="++theme++org.bccvl.theme/html/dist/password-reset.js"></script>
          </replace>
        </rules>

        <replace css:theme-children="div#content"  css:content-children="div#content" />
    </rules>

</rules>
