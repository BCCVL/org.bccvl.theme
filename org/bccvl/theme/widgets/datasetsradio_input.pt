<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="">

<table class="table table-hover bccvl-datasetsradiotable"
       tal:attributes="id view/id">
  <thead>
    <tr>
      <th colspan="3" tal:content="view/field/title">Title</th>
    </tr>
    <tr><td colspan="3" tal:content="view/field/description">Description</td></tr>
  </thead>
  <tbody>
    <tr tal:repeat="item view/items">
      <td class="bccvl-table-choose">
        <input id="" name="" checked="" type="radio" value=""
               data-friendlyname="radio_occurrence_title"
               required=""
               data-parsley-error-message="view/errmsg"
               tal:attributes="
                 id item/id;
                 name item/name;
                 checked item/checked;
                 value item/value;
                 data-friendlyname string:radio_occurrence_${item/label};
                 required view/required;
                 data-parsley-error-message view/errmsg|nothing"
                />
      </td>

      <td class="bccvl-table-label">
        <label for="inputid"
               tal:attributes="for item/id">
          <h1 tal:content="item/label">Label</h1>
          <p class="broken">provenance and description</p>
        </label>
      </td>

      <td class="bccvl-table-controls">
        <a class="fine bccvl-occurrence-viz"
           title="preview this dataset"
           data-viz-id="value"
           tal:attributes="data-viz-id item/value;
                           class view/vizclass">
           <i class="icon-eye-open icon-link"></i>
        </a>
      </td>
    </tr>
  </tbody>
</table>

