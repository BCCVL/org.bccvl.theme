<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="">
  <script type="text/javascript"
          tal:content="structure view/js"></script>
  <a id="fieldname-popup" href="#"
     tal:attributes="id string:${view/field/__name__}-popup"
     tal:content="string:Select ${view/label}">Select Occurrence Dataset</a>
  <div id="form-widgets-fieldname-selected"
       tal:attributes="id string:${view/id}-selected">
    <div class="selecteditem"
         tal:define="item view/item"
         tal:condition="python: view.value and item">
      <input type="hidden" value="" name="form.widgets.fieldname"
             tal:attributes="value view/value;
                             name view/name;
                             id view/id;
                             required view/required;
                             "/>
      <a class="btn btn-mini" href="#"><i class="icon-remove"></i></a>
      <span class="selected-option"
            tal:content="item/Title">Species</span>
    </div>
  </div>
</html>




<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="">

<table class="table table-hover bccvl-datasetsradiotable"
       tal:attributes="id view/id">
  <thead>
    <tr>
      <th colspan="3" tal:content="view/field/title">Title</th>
    </tr>
    <tr tal:condition="view/field/description"><td colspan="3" tal:content="view/field/description">Description</td></tr>
  </thead>
  <tbody>
    <tr tal:repeat="item view/items">
      <td class="bccvl-table-choose">
        <input id="" name="" checked="" type="radio" value=""
               data-friendlyname="radio_title"
               required=""
               data-parsley-error-message="view/errmsg"
               tal:attributes="
                 id item/id;
                 name item/name;
                 checked item/checked;
                 value item/value;
                 data-friendlyname string:radio_${item/label};
                 required view/required;
                 data-parsley-error-message view/errmsg|nothing"
                />
      </td>

      <td class="bccvl-table-label">
        <label for="inputid"
               tal:attributes="for item/id">
          <p tal:content="item/label"><strong>Label</strong></p>
          <p tal:condition="item/md/rows">rows:<i tal:content="item/md/rows"></i></p>
          <p tal:condition="item/md/scientificname">species:<i tal:content="item/md/scientificname"></i></p>
        </label>
      </td>

      <td class="bccvl-table-controls">
        <a class="fine bccvl-occurrence-viz"
           title="preview this dataset"
           data-viz-id="value"
           data-uuid="value"
           tal:attributes="data-viz-id python: item['dlinfo']['alturl'][0];
                           data-uuid item/value;
                           class view/vizclass">
           <i class="icon-eye-open icon-link"></i>
        </a>
      </td>
    </tr>
  </tbody>
</table>

