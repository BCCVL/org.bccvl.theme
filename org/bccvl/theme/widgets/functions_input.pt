<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag=""
      tal:define="items view/items;
                  single_checkbox python:len(items) == 1;
                  portal_url context/@@plone/navigationRootUrl">
  <tal:loop tal:repeat="item items">
    <label class="checkbox">
      <input type="checkbox" id="" name="" class="" title=""
             disabled="" readonly="" value="" checked="checked"
             data-parsley-mincheck="1"
             data-parsley-error-message="Please select at least 1 algorithm"
             data-friendlyname="checkbox_algorith_label"
             tal:attributes="id item/id;
                             name item/name;
                             class python: 'required' if view.required else '';
                             data-class view/klass;
                             value item/value;
                             title view/title;
                             disabled view/disabled;
                             readonly view/readonly;
                             checked item/checked;
                             data-friendlyname string:checkbox_algorithm_${item/label};"/>
      <!-- <input name="field-empty-marker" type="hidden" value="1" -->
      <!--        tal:attributes="name string:${view/name}-empty-marker" /> -->
      <span class="label" tal:content="structure item/label">Label</span>
      <a class="search" target="_blank" href="searchurl"
         tal:attributes="href string:${portal_url}/@@search?Subject=${python: ' '.join(item['subject'])}">
        <i class="icon-info-sign" title="more information"></i>
      </a>
    </label>
  </tal:loop>
</html>
